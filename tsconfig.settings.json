{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "declarationMap": true,
    "incremental": true,
    "strict": true,
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "exclude": [
    "**/*.d.ts",
    "packages/**/node_modules",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
